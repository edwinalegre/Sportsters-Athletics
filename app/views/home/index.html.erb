<div class="container-fluid">
<div class="row">
  <div class="col-xs-6 col-sm-4 col-md-4 col-lg-2" ng-repeat="item in sportsters | filter:search">
    <div class="profile">
      <div class="photo"><a href="/sportsters/{{item.id}}"><img src="{{item.photo.thumb.url}}" class="img-responsive image"></a>
        <div class="name"><a href="/sportsters/{{item.id}}">{{item.id}}:</a> {{item.firstname}} {{item.lastname}}</div>
        <div class="team">
          <strong>Team:</strong> {{item.team}}<br>
          <strong>Division:</strong> {{item.division}}
        </div>
        <div class="sport {{item.sport | lowercase }}">{{item.sport}} {{item.year}}</div>
      </div>
    </div>
  </div>
</div>
</div>