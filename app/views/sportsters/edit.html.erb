<div class="col-xs-offset-2 col-xs-8 col-sm-8 col-md-8 col-lg-8">
  <br />
  <div class="buttons"><!-- 
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">Edit</button> -->
    <%= link_to "Back", sportsters_path, class: "btn btn-default" %>
    <%= link_to 'Edit', edit_sportster_path(@sportster), class: "btn btn-default" %>
    <%= link_to 'Delete', @sportster, method: :delete, class: "btn btn-danger" %>
  </div>
  <div class="profile">
    <div class="photo"><img src="<%= @sportster.photo %>" class="img-responsive image"></div>
    <div class="name"><%= @sportster.firstname %> <%= @sportster.lastname %></div>
    <div class="team">
      <strong>Team:</strong> <%= @sportster.team %><br>
      <strong>Division:</strong> <%= @sportster.division %><br>
    </div>
    <div class="sport <%= @sportster.sport.downcase %>"><%= @sportster.sport %> <%= @sportster.year %></div>
  </div>
</div>
<!-- Modal -->
<%= form_for(@sportster) do |f| %>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Sportster Profile</h4>
      </div>
      <div class="modal-body">
        
        <%= f.label :name, "First Name:" %><br>
        <%= f.text_field :firstname %><br>
        <%= f.label :name, "Last Name:" %><br>
        <%= f.text_field :lastname %><br>
        <%= f.label :name, "Team:" %><br>
        <%= f.text_field :team %><br>
        <%= f.label :name, "Profile Image (url)" %><br>
        <%= f.file_field :photo %><br>

        <%= f.label :name, "Year" %><br>
        <%= f.select(:year) do %>
          <%= content_tag(:option, @sportster[:year], value: @sportster[:year]) %>
          <% [
                [2010, 2010],
                [2011, 2011],
                [2012, 2012],
                [2013, 2013],
                [2014, 2014],
                [2015, 2015]
          ].each do |c| -%>
          <%= content_tag(:option, c.first, value: c.last) %>
          <% end %>
        <% end %><br>

        <%= f.label :name, "Sport" %><br>
        <%= f.select(:sport) do %>
          <%= content_tag(:option, @sportster[:sport], value: @sportster[:sport]) %>
          <% [
                ['Baseball', 'Baseball'],
                ['Basketball', 'Basketball'],
                ['Soccer', 'Soccer']
          ].each do |c| -%>
          <%= content_tag(:option, c.first, value: c.last) %>
          <% end %>
        <% end %><br>

        <%= f.label :name, "Division" %><br>
        <%= f.select(:division) do %>
          <%= content_tag(:option, @sportster[:division], value: @sportster[:division]) %>
          <% [
                ['Pee Wees', 'Pee Wees'],
                ['Minors I', 'Minors I'],
                ['Minors II', 'Minors II'],
                ['Majors', 'Majors'],
                ['Girls', 'Girls']
          ].each do |c| -%>
          <%= content_tag(:option, c.first, value: c.last) %>
          <% end %>
        <% end %><br>

      </div>
      <div class="modal-footer">
        <%= f.submit "Edit Participant", class: "btn btn-default" %>
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
      </div>
    </div>
  </div>
</div>
<% end %>