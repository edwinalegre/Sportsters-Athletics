
  <form class="container-fluid" role="search">
    <div class="form-group">
      <input type="text" ng-model="search.firstname" placeholder="Search by First Name">
      <input type="text" ng-model="search.lastname" placeholder="Search by Last Name">
      <input type="text" ng-model="search.team" placeholder="Search by Team">
    Division
      <select ng-model="search.division">
        <option></option>
        <option>Pee Wees</option>
        <option>Minors I</option>
        <option>Minors II</option>
        <option>Majors</option>
        <option>Girls</option>
      </select>
    Sport
      <select ng-model="search.sport">
        <option></option>
        <option>Basketball</option>
        <option>Baseball</option>
        <option>Soccer</option>
      </select>
    Year
      <select ng-model="search.year">
        <option></option>
        <option>2011</option>
        <option>2012</option>
        <option>2013</option>
        <option>2014</option>
        <option>2015</option>
      </select>
    </div>
  </form>

<div class="container-fluid">
<div class="row">
  <div class="col-xs-6 col-sm-4 col-md-4 col-lg-2" ng-repeat="item in sportsters | filter:search | orderBy:'lastname'"><a href="/sportsters/{{item.id}}">{{item.id}}:</a>
    <div class="profile">
      <div class="photo"><a href="/sportsters/{{item.id}}">
        <img src="{{!item.photo.thumb.url === true ? 'http://randalliowa.com/assets/Not_Available.jpg' : item.photo.thumb.url}}" class="img-responsive image">
      </a>
        <div class="name"> {{item.firstname}} {{item.lastname}}</div>
        <div class="team">
          {{item.team}}<br>
          {{item.division}}
        </div>
        <div class="sport {{item.sport | lowercase }}">{{item.sport}} {{item.year}}</div>
      </div>
    </div>
  </div>
</div>
</div>